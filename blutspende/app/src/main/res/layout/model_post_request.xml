<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/modelPostRequestImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/blood_donation_logo" />

            <TextView
                android:id="@+id/modelPostRequestUserName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/modelPostRequestImageView"
                android:fontFamily="@font/ubuntu_bold"
                android:foregroundGravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/modelPostRequestPhone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/modelPostRequestUserName"
                android:layout_marginStart="10dp"

                android:layout_toEndOf="@+id/modelPostRequestImageView"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/modelPostRequestBloodGroup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/modelPostRequestUserName"
                android:layout_toEndOf="@+id/modelPostRequestPhone"
                android:drawablePadding="2dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:text="ab+"
                android:textColor="@color/purple_500"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/modelPostRequestCallButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/modelPostRequestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/modelPostRequestCallButton"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu_light_italic"
                android:text="17/10/2022"
                android:drawableEnd="@drawable/baseline_access_time_24"
                android:drawablePadding="4dp"
                android:drawableTint="@color/purple_500"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/modelPostRequestLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/modelPostRequestDate"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu_light_italic"
                android:text="Narayanganj,Dhaka"
                android:drawableEnd="@drawable/baseline_location_on_24"
                android:drawablePadding="4dp"
                android:drawableTint="@color/purple_500"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>