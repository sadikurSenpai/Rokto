<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".ChangePassword">

    <LinearLayout
        android:id="@+id/linearLayout2qq"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changePassUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="Current Password"
                android:background="@drawable/custom_et"
                android:padding="16dp"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="4dp"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changePassPass"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="New Password"
                android:background="@drawable/custom_et"
                android:padding="16dp"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="4dp"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changePassConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="Retype new Password"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_et"
                android:padding="16dp"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="4dp"
                android:inputType="textPassword"
                android:textSize="18sp" />


    </LinearLayout>

    <Button
        android:id="@+id/changePassCreateButton"
        android:layout_width="257dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="update"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/custom_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2qq"
        app:layout_constraintVertical_bias="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>