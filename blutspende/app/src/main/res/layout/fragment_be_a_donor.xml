<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beADonor.beADonorFragment">


    <ScrollView
        android:id="@+id/scrollView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout23"
            android:layout_width="368dp"
            android:layout_height="406dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-180dp"
            tools:layout_editor_absoluteY="-142dp">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Become a Superhero"
                android:textAlignment="center"
                android:textColor="#393E46"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/beADonorImage"
                    android:layout_width="136dp"
                    android:layout_height="131dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/PDChooseButton"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Cost"
                    app:srcCompat="@drawable/avatar" />

                <Button
                    android:id="@+id/beADonorImageButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn"
                    android:onClick="signUpPictureChoosingButton"
                    android:text="Choose Picture" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Division"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/beADonorDivision"
                    android:layout_width="165dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lg3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hhh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:layout_alignParentEnd="true"
                    android:id="@+id/beADonorDistrict"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lgg3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hhhh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:layout_alignParentEnd="true"
                    android:id="@+id/beADonorBloodGroup"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Switch
                    android:id="@+id/beADonorSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Donated Before" />

                <Button
                    android:id="@+id/beADonorButton"
                    style="?spinnerStyle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_alignParentEnd="true"
                    android:text="01/12/2023"
                    android:textColor="@color/black" />
            </RelativeLayout>




            <Button
                android:id="@+id/beADonorCreateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:backgroundTint="@color/purple_500"
                android:text="Create account"
                android:textColor="@color/purple_700"
                android:background="@drawable/custom_btn"
                 />


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/beADonorProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="159dp"
        android:layout_height="124dp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>